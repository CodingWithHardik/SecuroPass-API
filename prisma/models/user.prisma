model User {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  emailVerified Boolean @default(false)
  name String
  hashedpwd String
  randompwd String
  isTempPwd Boolean @default(false)
  passwordchangeAt DateTime?
  profileImage String @default("https://example.com/default-profile.png")
  platformRole PlatformRole @default(USER)
  member OrganizationUser[]
  passes Passes[]
  eventTeams EventTeam[]
  devices Devices[]
}

model Devices {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userAgent String
  ipAddress String
  token String @unique
  icodev String @unique
  ivcode String @unique
  userId String
  status DeviceStatus @default(ACTIVE)
  user User @relation(fields: [userId], references: [id])
}

enum DeviceStatus {
  ACTIVE
  REVOKED
}

enum PlatformRole {
  SUPER_ADMIN
  ADMIN
  MODERATOR
  ENTERPRISE_USER
  USER
}